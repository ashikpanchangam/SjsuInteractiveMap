<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:clickable="true"
    android:background="@drawable/campusmap"
    android:id="@+id/rootLayout"
    tools:context="com.example.ashikspc.sjsuinteractivemap.MapActivity">

    <ImageView
        android:id="@+id/bldgmarker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/marker"
        android:alpha="0"
        />

    <ImageView
        android:id="@+id/imageview_circle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="90dp"
        android:id="@+id/king_button"
        android:alpha="0"
        android:layout_marginTop="140dp"
        android:layout_marginStart="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/bg">
    </Button>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/su_button"
        android:alpha="0"
        android:layout_below="@+id/eng_button"
        android:layout_alignStart="@+id/eng_button"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="85dp"
        android:id="@+id/eng_button"
        android:alpha="0"
        android:layout_marginTop="20dp"
        android:layout_marginStart="133dp"
        android:layout_alignTop="@+id/king_button"
        android:layout_toEndOf="@+id/king_button"
        android:background="@drawable/bg"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:id="@+id/bbc_button"
        android:alpha="0"
        android:layout_below="@+id/su_button"
        android:layout_toEndOf="@+id/su_button"
        android:layout_marginStart="28dp"
        android:background="@drawable/bg" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/yhu_button"
        android:alpha="0"
        android:layout_below="@+id/bbc_button"
        android:layout_alignStart="@+id/king_button"
        android:layout_marginLeft="5dp"
        android:background="@drawable/bg"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:id="@+id/spg_button"
        android:alpha="0"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="28dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/su_button"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg"/>

</RelativeLayout>